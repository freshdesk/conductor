<!-- default log configuration -->
<Configuration status="WARN">
    <Appenders>
        <Console name="CONSOLE">
            <PatternLayout pattern="%-4r [%t] %-5p %c %x - %m%n"/>
        </Console>

        <!-- Rolling File Appender -->
        <RollingFile name="File" fileName="server.log" filePattern="server.%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>%-4r [%t] %-5p %c %x - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>

    </Appenders>



    <Loggers>

        <Root level="INFO">
            <AppenderRef ref="CONSOLE" />
            <AppenderRef ref="File" />
        </Root>

    </Loggers>
</Configuration>
